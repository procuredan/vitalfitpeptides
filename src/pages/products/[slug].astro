---
import Base from "../../layouts/Base.astro";
import products from "../../data/products.json";

export function getStaticPaths() {
  return products.map((p) => ({
    params: { slug: p.slug },
    props: { product: p },
  }));
}

const { product } = Astro.props;

const hasCheckout = product?.checkoutUrl && product.checkoutUrl.trim() !== "";
const imgSrc = product?.image ? product.image : `/products/${product.slug}.png`;

const related = products
  .filter((p) => p.slug !== product.slug)
  .slice(0, 4);
---

<Base
  title={`${product.name} | Vital Fit Peptides`}
  description={`${product.name} (${product.size}) — research-use-only. Not for human or veterinary use.`}
>
  <nav class="crumbs">
    <a href="/shop">← Back to Shop</a>
    <span class="muted">/</span>
    <span class="muted">{product.name}</span>
  </nav>

  <section class="pdp">
    <div class="pdp-media card">
      <div class="media-top">
        <span class={`pill ${hasCheckout ? "pill-live" : "pill-soon"}`}>
          {hasCheckout ? "Available" : "Coming soon"}
        </span>
        <span class="pill pill-outline">{product.size}</span>
      </div>

      <div class="media-img">
        <img
          src={imgSrc}
          alt={`${product.name} vial`}
          loading="eager"
          onerror="this.style.display='none'; this.parentElement.classList.add('fallback');"
        />
      </div>

      <div class="muted media-note">
        Image placeholder. We’ll swap this with your real label/render.
      </div>
    </div>

    <div class="pdp-main">
      <div class="pdp-title">
        <h1>{product.name}</h1>
        <p class="muted lead">{product.short}</p>
      </div>

      <div class="buybox card">
        <div class="buy-top">
          <div>
            <div class="buy-label muted">Default size</div>
            <div class="buy-size">{product.size}</div>
          </div>
          <div class="buy-status">
            <span class={`dot ${hasCheckout ? "dot-live" : "dot-soon"}`}></span>
            <span class="muted">{hasCheckout ? "In stock" : "Preparing checkout"}</span>
          </div>
        </div>

        <div class="buy-actions">
          {hasCheckout ? (
            <a class="btn btn-primary" href={product.checkoutUrl}>Buy now</a>
          ) : (
            <a class="btn btn-primary" href="/contact">Get notified</a>
          )}
          <a class="btn" href="/coas">View COAs</a>
        </div>

        <div class="buy-fine muted">
          Research use only. Not for human or veterinary use.
        </div>
      </div>

      <div class="info-grid">
        <div class="info card">
          <div class="info-title">Packaging</div>
          <div class="info-val">{product.packaging ?? "Lyophilized vial"}</div>
        </div>
        <div class="info card">
          <div class="info-title">Documentation</div>
          <div class="info-val">{product.documentation ?? "COA available by lot number"}</div>
        </div>
        <div class="info card">
          <div class="info-title">Status</div>
          <div class="info-val">{product.status ?? (hasCheckout ? "Available" : "Preparing checkout links")}</div>
        </div>
      </div>

      <section class="sections">
        <div class="section card">
          <h2>Overview</h2>
          <p class="muted">
            This product is supplied strictly for laboratory research purposes only.
            It is not intended for human or veterinary use, diagnosis, treatment, cure, or prevention of any disease.
          </p>
        </div>

        <div class="section card">
          <h2>COA / Lot Information</h2>
          <p class="muted">
            Certificates of Analysis are provided by lot number.
            If you need a COA, visit the COAs page or email your lot number.
          </p>
          <div class="section-actions">
            <a class="btn" href="/coas">COAs</a>
            <a class="btn" href="/contact">Request via email</a>
          </div>
        </div>

        <div class="section card">
          <h2>Compliance</h2>
          <ul class="muted">
            <li>Sold strictly for laboratory research purposes only.</li>
            <li>Not for human or veterinary use.</li>
            <li>Not intended to diagnose, treat, cure, or prevent any disease.</li>
            <li>Handle and store according to standard laboratory practices.</li>
          </ul>
        </div>
      </section>
    </div>
  </section>

  <section class="related">
    <div class="related-head">
      <h2>Related products</h2>
      <a class="muted" href="/shop">View all →</a>
    </div>

    <div class="related-grid">
      {related.map((p) => (
        <a class="r-card card" href={`/products/${p.slug}`}>
          <div class="r-top">
            <div class="r-name">{p.name}</div>
            <div class="r-size muted">{p.size}</div>
          </div>
          <div class="r-desc muted">{p.short}</div>
        </a>
      ))}
    </div>
  </section>

  <style>
    .crumbs{
      display:flex;
      gap:10px;
      align-items:center;
      margin: 10px 0 14px;
      font-weight: 900;
      font-size: 13px;
    }
    .crumbs a{ text-decoration:none; }
    .crumbs a:hover{ text-decoration:underline; }

    .pdp{
      display:grid;
      grid-template-columns: 420px 1fr;
      gap: 18px;
      align-items:start;
    }

    .pdp-media{ padding: 16px; position: sticky; top: 92px; }
    .media-top{ display:flex; gap:10px; justify-content:space-between; align-items:center; }
    .pill{
      display:inline-flex;
      align-items:center;
      gap:8px;
      padding: 8px 12px;
      border-radius: 999px;
      border: 1px solid var(--border);
      font-weight: 1000;
      font-size: 12px;
      background: rgba(0,0,0,.22);
    }
    .pill-outline{ background: rgba(255,255,255,.03); }
    .pill-live{ border-color: rgba(34,211,238,.35); }
    .pill-soon{ border-color: rgba(139,92,246,.35); }

    .media-img{
      height: 320px;
      margin-top: 12px;
      border-radius: 16px;
      border: 1px solid var(--border);
      background: radial-gradient(500px 220px at 30% 0%, rgba(139,92,246,.18), transparent 55%),
                  radial-gradient(360px 200px at 80% 0%, rgba(34,211,238,.12), transparent 55%),
                  rgba(255,255,255,.02);
      display:grid;
      place-items:center;
      overflow:hidden;
    }
    .media-img img{
      max-width: 85%;
      max-height: 240px;
      filter: drop-shadow(0 18px 30px rgba(0,0,0,.5));
    }
    .media-img.fallback::after{
      content: "Vial image";
      color: rgba(255,255,255,.55);
      font-weight: 1000;
      letter-spacing: .08em;
      text-transform: uppercase;
      font-size: 12px;
    }
    .media-note{ margin-top: 10px; font-size: 12px; }

    .pdp-title h1{
      margin: 0 0 8px;
      font-size: 44px;
      letter-spacing: -0.03em;
    }
    .lead{ max-width: 70ch; margin: 0 0 10px; }

    .buybox{ padding: 16px; margin-top: 14px; }
    .buy-top{
      display:flex;
      justify-content:space-between;
      gap: 12px;
      align-items:flex-start;
    }
    .buy-label{ font-weight: 900; font-size: 12px; }
    .buy-size{ font-weight: 1000; font-size: 22px; letter-spacing:-0.02em; margin-top: 4px; }
    .buy-status{ display:flex; gap: 10px; align-items:center; font-weight: 900; }
    .dot{ width: 10px; height: 10px; border-radius: 999px; background: rgba(255,255,255,.18); }
    .dot-live{ background: rgba(34,211,238,.9); }
    .dot-soon{ background: rgba(139,92,246,.9); }

    .buy-actions{ display:flex; gap: 10px; flex-wrap: wrap; margin-top: 14px; }
    .buy-fine{ margin-top: 12px; font-size: 12px; }

    .info-grid{
      margin-top: 14px;
      display:grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 12px;
    }
    .info{ padding: 14px; }
    .info-title{ font-weight: 1000; font-size: 12px; color: var(--muted); }
    .info-val{ font-weight: 900; margin-top: 6px; }

    .sections{ margin-top: 16px; display:grid; gap: 12px; }
    .section{ padding: 16px; }
    .section h2{ margin: 0 0 8px; font-size: 18px; letter-spacing: -0.02em; }
    .section-actions{ margin-top: 10px; display:flex; gap:10px; flex-wrap: wrap; }
    .section ul{ margin: 10px 0 0 18px; }

    .related{ margin-top: 22px; }
    .related-head{
      display:flex;
      justify-content:space-between;
      align-items:baseline;
      gap: 12px;
    }
    .related-grid{
      margin-top: 12px;
      display:grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 12px;
    }
    .r-card{ padding: 14px; text-decoration:none; transition: transform .15s ease, border-color .15s ease; }
    .r-card:hover{ transform: translateY(-2px); border-color: rgba(139,92,246,.45); }
    .r-top{ display:flex; justify-content:space-between; gap: 10px; font-weight: 1000; }
    .r-name{ letter-spacing:-0.02em; }
    .r-desc{ margin-top: 8px; font-size: 13px; line-height: 1.5; }

    @media (max-width: 980px){
      .pdp{ grid-template-columns: 1fr; }
      .pdp-media{ position: relative; top: auto; }
      .info-grid{ grid-template-columns: 1fr; }
    }
  </style>
</Base>