---
import Base from "../layouts/Base.astro";
import products from "../data/products.json";
---
<Base title="Shop | Vital Fit Peptides" description="Browse research-use-only peptides.">
  <h1>Shop</h1>

  <p style="opacity:.8;margin-top:0">Select a product to view details.</p>

  <div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(230px,1fr));gap:14px">
    {Array.isArray(products) && products.length > 0 ? (
      products.map((p) => (
        <a
          href={`/products/${p.slug}`}
          style="border:1px solid #eee;border-radius:16px;padding:14px;text-decoration:none;color:inherit;background:#fff"
        >
          <div style="display:flex;justify-content:space-between;gap:10px;align-items:baseline">
            <div style="font-weight:900">{p.name}</div>
            <div style="opacity:.8">{p.size}</div>
          </div>
          <p style="margin:10px 0 0;opacity:.9">{p.short}</p>
        </a>
      ))
    ) : (
      <div style="padding:14px;border:1px solid #eee;border-radius:12px;background:#fafafa">
        No products loaded. Check <code>src/data/products.json</code>.
      </div>
    )}
  </div>
</Base>