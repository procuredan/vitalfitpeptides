---
const {
  title = "Vital Fit Peptides",
  description = "Research-use-only peptides supplied for laboratory research use only.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body>
    <header class="site-header">
      <div class="container header-inner">
        <a class="brand" href="/">
          <span class="brand-mark">VF</span>
          <span class="brand-text">Vital Fit Peptides</span>
        </a>

        <nav class="nav">
          <a class="nav-link nav-cta" href="/get-started">Get Started</a>
          <a class="nav-link" href="/shop">Shop</a>
          <a class="nav-link" href="/learn">Learn</a>
          <a class="nav-link" href="/coas">COAs</a>
          <a class="nav-link" href="/contact">Contact</a>
        </nav>
      </div>

      <div class="trust-strip">
        <div class="container trust-inner">
          <span>✅ Research use only</span>
          <span>✅ COAs by lot number</span>
          <span>✅ Preparing CheckoutChamp links</span>
        </div>
      </div>
    </header>

    <main class="main">
      <div class="container">
        <slot />
      </div>
    </main>

    <footer class="site-footer">
      <div class="container footer-grid">
        <div>
          <div class="footer-brand">Vital Fit Peptides</div>
          <p class="muted" style="margin-top:8px; max-width:48ch;">
            Research-use-only peptides. Not for human or veterinary use.
          </p>
        </div>

        <div class="footer-col">
          <div class="footer-title">Shop</div>
          <a href="/shop">All Products</a>
          <a href="/get-started">Get Started</a>
          <a href="/coas">COAs</a>
        </div>

        <div class="footer-col">
          <div class="footer-title">Company</div>
          <a href="/contact">Contact</a>
          <a href="/learn">Learn</a>
          <a href="/faq">FAQ</a>
        </div>

        <div class="footer-col">
          <div class="footer-title">Legal</div>
          <a href="/terms">Terms</a>
          <a href="/privacy">Privacy</a>
          <a href="/shipping-returns">Shipping & Returns</a>
          <a href="/disclaimer">Disclaimer</a>
        </div>
      </div>

      <div class="container footer-bottom">
        <span class="muted">© {new Date().getFullYear()} Vital Fit Peptides</span>
      </div>
    </footer>

    <style>
      :root{
        --bg: #0b0b0f;
        --panel: #10111a;
        --panel2: #12131a;
        --text: rgba(255,255,255,.92);
        --muted: rgba(255,255,255,.68);
        --border: rgba(255,255,255,.12);
        --shadow: 0 18px 50px rgba(0,0,0,.45);
        --radius: 18px;
        --accent: rgba(139,92,246,1);
        --accent2: rgba(34,211,238,1);
        --max: 1120px;
      }

      *{ box-sizing:border-box; }
      html, body { height:100%; }
      body{
        margin:0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
        background: radial-gradient(1200px 600px at 20% -10%, rgba(139,92,246,.16), transparent 55%),
                    radial-gradient(900px 500px at 80% 0%, rgba(34,211,238,.10), transparent 55%),
                    var(--bg);
        color: var(--text);
      }

      a{ color: inherit; }
      .container{ max-width: var(--max); margin: 0 auto; padding: 0 20px; }
      .main{ padding: 26px 0 56px; }

      .muted{ color: var(--muted); }
      .card{
        background: rgba(16,17,26,.72);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        backdrop-filter: blur(10px);
      }

      /* Header */
      .site-header{
        position: sticky;
        top: 0;
        z-index: 50;
        background: rgba(11,11,15,.72);
        border-bottom: 1px solid var(--border);
        backdrop-filter: blur(10px);
      }
      .header-inner{
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap: 16px;
        padding: 14px 20px;
      }
      .brand{
        display:flex;
        align-items:center;
        gap: 10px;
        text-decoration:none;
        font-weight: 900;
        letter-spacing: -0.02em;
      }
      .brand-mark{
        width: 34px;
        height: 34px;
        display:grid;
        place-items:center;
        border-radius: 12px;
        background: linear-gradient(135deg, rgba(139,92,246,.95), rgba(34,211,238,.55));
        box-shadow: 0 10px 30px rgba(0,0,0,.35);
        font-size: 14px;
      }
      .brand-text{ font-size: 15px; opacity:.95; }

      .nav{
        display:flex;
        align-items:center;
        gap: 10px;
        flex-wrap: wrap;
        justify-content:flex-end;
      }
      .nav-link{
        text-decoration:none;
        font-weight: 800;
        font-size: 14px;
        opacity: .9;
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid transparent;
      }
      .nav-link:hover{
        opacity: 1;
        border-color: var(--border);
        background: rgba(255,255,255,.04);
      }
      .nav-cta{
        background: linear-gradient(135deg, rgba(139,92,246,.95), rgba(34,211,238,.35));
        border-color: rgba(139,92,246,.35);
        box-shadow: 0 12px 34px rgba(0,0,0,.35);
      }
      .nav-cta:hover{
        background: linear-gradient(135deg, rgba(139,92,246,1), rgba(34,211,238,.45));
        border-color: rgba(34,211,238,.35);
      }

      .trust-strip{
        border-top: 1px solid var(--border);
        background: rgba(16,17,26,.55);
      }
      .trust-inner{
        display:flex;
        gap: 14px;
        flex-wrap: wrap;
        padding: 10px 20px;
        font-size: 13px;
        color: var(--muted);
        justify-content: center;
      }

      /* Buttons (use everywhere) */
      .btn{
        display:inline-flex;
        align-items:center;
        justify-content:center;
        gap: 10px;
        padding: 12px 14px;
        border-radius: 14px;
        border: 1px solid var(--border);
        background: rgba(255,255,255,.04);
        text-decoration:none;
        font-weight: 900;
      }
      .btn:hover{
        border-color: rgba(139,92,246,.55);
        box-shadow: 0 10px 30px rgba(0,0,0,.35);
        transform: translateY(-1px);
      }
      .btn-primary{
        background: linear-gradient(135deg, rgba(139,92,246,.95), rgba(34,211,238,.28));
        border-color: rgba(139,92,246,.35);
      }

      /* Footer */
      .site-footer{
        border-top: 1px solid var(--border);
        background: rgba(11,11,15,.85);
        padding: 34px 0 18px;
      }
      .footer-grid{
        display:grid;
        grid-template-columns: 1.6fr 1fr 1fr 1fr;
        gap: 18px;
      }
      .footer-brand{
        font-weight: 1000;
        letter-spacing: -0.02em;
      }
      .footer-title{
        font-weight: 900;
        margin-bottom: 10px;
        opacity: .95;
      }
      .footer-col a{
        display:block;
        text-decoration:none;
        color: var(--muted);
        margin-bottom: 8px;
        font-weight: 800;
      }
      .footer-col a:hover{ color: var(--text); }

      .footer-bottom{
        margin-top: 18px;
        padding-top: 14px;
        border-top: 1px solid var(--border);
        display:flex;
        justify-content:space-between;
        gap: 12px;
        flex-wrap: wrap;
      }

      @media (max-width: 880px){
        .footer-grid{ grid-template-columns: 1fr 1fr; }
        .brand-text{ display:none; }
      }
      @media (max-width: 520px){
        .footer-grid{ grid-template-columns: 1fr; }
        .nav{ gap: 6px; }
        .nav-link{ padding: 9px 10px; }
      }
    </style>
  </body>
</html>