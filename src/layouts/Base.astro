---
const { title = "Vital Fit Peptides" } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
   <header class="site-header">
  <div class="container">
    <a href="/" class="logo">Vital Fit Peptides</a>

    <nav class="nav">
        <a href="/get-started">Get Started</a>
      <a href="/shop">Shop</a>
      <a href="/learn">Learn</a>
      <a href="/coas">COAs</a>
      <a href="/contact">Contact</a>
    </nav>
  </div>
</header>

    <main class="site-main"></main>
      <slot />
    </main>

    <footer class="site-footer">
  <div class="container footer-grid">
    <div>
      <strong>Vital Fit Peptides</strong>
      <p class="muted">
        Research-use-only peptides. Not for human or veterinary use.
      </p>
    </div>

    <div class="footer-links">
      <a href="/terms">Terms</a>
      <a href="/privacy">Privacy</a>
      <a href="/shipping-returns">Shipping & Returns</a>
      <a href="/disclaimer">Disclaimer</a>
    </div>
  </div>
</footer>
  </body>
  <style>
  :root{
    --bg:#0b0c10;
    --text:#f4f4f5;
    --muted:rgba(244,244,245,.70);
    --border:rgba(244,244,245,.12);
    --card:rgba(244,244,245,.04);
    --accent:#8b5cf6;
    --radius:18px;
  }

  body{
    margin:0;
    background:var(--bg);
    color:var(--text);
    font-family:Inter,system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;
    line-height:1.6;
  }

  h1,h2,h3{
    font-family:Sora,Inter,system-ui,sans-serif;
    letter-spacing:-0.03em;
    line-height:1.15;
  }

  a{ color:inherit; }

  .container{
    max-width:1100px;
    margin:0 auto;
    padding:16px 20px;
    display:flex;
    align-items:center;
    justify-content:space-between;
    gap:16px;
  }

  .site-header{
    border-bottom:1px solid var(--border);
    position:sticky;
    top:0;
    background:rgba(11,12,16,.85);
    backdrop-filter:saturate(120%) blur(10px);
    z-index:10;
  }

  .logo{
    text-decoration:none;
    font-weight:800;
    font-family:Sora,Inter,system-ui,sans-serif;
    letter-spacing:-0.02em;
  }

  .nav a{
    text-decoration:none;
    margin-left:14px;
    color:var(--muted);
    font-weight:600;
    font-size:14px;
  }

  .nav a:hover{ color:var(--text); }

  .site-main{
    max-width:1100px;
    margin:0 auto;
    padding:28px 20px;
  }

  .site-footer{
    border-top:1px solid var(--border);
    margin-top:48px;
    padding:18px 0 32px;
  }

  .footer-grid{
    display:grid;
    grid-template-columns:1fr auto;
    align-items:start;
    gap:24px;
  }

  .footer-links a{
    display:block;
    text-decoration:none;
    color:var(--muted);
    margin-bottom:8px;
    font-size:14px;
  }

  .footer-links a:hover{ color:var(--text); }

  .muted{
    color:var(--muted);
    font-size:13px;
    margin:8px 0 0;
    max-width:55ch;
  }
  .product-grid{
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(260px,1fr));
  gap:16px;
  margin-top:18px;
}

.product-card{
  display:block;
  padding:18px;
  border:1px solid var(--border);
  border-radius:var(--radius);
  background:#12131a;
  text-decoration:none;
  transition:transform .15s ease, border-color .15s ease, box-shadow .15s ease;
}

..product-card:hover{
  transform:translateY(-3px);
  border-color:rgba(139,92,246,.6);
  box-shadow:0 10px 30px rgba(0,0,0,.45);
}
}

.product-top{
  display:flex;
  align-items:baseline;
  justify-content:space-between;
  gap:12px;
}

.product-name{
  font-weight:800;
  letter-spacing:-0.02em;
  color:var(--text);
}

.product-size{
  color:var(--muted);
  font-weight:700;
  font-size:13px;
}

.product-desc{
  margin:10px 0 0;
  color:var(--muted);
  font-size:14px;
  line-height:1.55;
}

.product-cta{
  margin-top:14px;
  display:flex;
  justify-content:space-between;
  align-items:center;
  font-weight:800;
  font-size:14px;
}
.crumbs{
  margin: 6px 0 14px;
}
.crumbs a{
  color: var(--muted);
  text-decoration: none;
  font-weight: 700;
  font-size: 14px;
}
.crumbs a:hover{ color: var(--text); }

.badge{
  display:inline-block;
  padding:6px 10px;
  border-radius:999px;
  border:1px solid var(--border);
  background: rgba(139,92,246,.10);
  color: var(--text);
  font-weight: 800;
  font-size: 12px;
  letter-spacing: .02em;
}

.product-hero{
  padding: 22px;
}
.product-hero-top{
  display:flex;
  justify-content:space-between;
  gap: 18px;
  flex-wrap: wrap;
}
.product-title{
  margin: 10px 0 6px;
}
.product-sub{
  margin: 0 0 10px;
  font-weight: 800;
}
.product-short{
  margin: 12px 0 0;
  color: var(--muted);
  max-width: 70ch;
}

.product-actions{
  display:flex;
  gap:10px;
  flex-wrap: wrap;
  align-items:flex-start;
}

.btn{
  display:inline-flex;
  align-items:center;
  justify-content:center;
  gap:10px;
  padding: 10px 14px;
  border-radius: 14px;
  border: 1px solid var(--border);
  text-decoration:none;
  font-weight: 800;
  background: transparent;
  color: var(--text);
  cursor: pointer;
}
.btn-primary{
  background: var(--accent);
  border-color: transparent;
  color: #fff;
}
.btn-disabled{
  opacity: .55;
  cursor: not-allowed;
}

.product-meta{
  margin-top: 18px;
  display:grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 12px;
  border-top: 1px solid var(--border);
  padding-top: 16px;
}
.meta-item{
  padding: 12px;
  border: 1px solid var(--border);
  border-radius: var(--radius);
  background: #12131a;
}
.meta-k{
  color: var(--muted);
  font-size: 12px;
  font-weight: 800;
  text-transform: uppercase;
  letter-spacing: .06em;
}
.meta-v{
  margin-top: 6px;
  font-weight: 800;
}

.product-section{
  margin-top: 16px;
  padding: 20px;
}
.inline-links{
  margin-top: 12px;
  display:flex;
  gap:10px;
  flex-wrap: wrap;
}
.compliance-list{
  margin: 10px 0 0;
  color: var(--muted);
}
.compliance-list li{ margin: 8px 0; }
.section{ margin-top: 26px; }
.section-head{ margin-bottom: 12px; }

.tile-grid{
  display:grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 16px;
}

.tile{
  padding: 18px;
}

.tile-top h3{ margin: 0 0 8px; }
.tile-top p{ margin: 0; }

.tile-links{
  margin-top: 14px;
  display:flex;
  flex-direction:column;
  gap:10px;
}

.tile-link{
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding: 12px 14px;
  border:1px solid var(--border);
  border-radius: 14px;
  background:#12131a;
  text-decoration:none;
  font-weight: 900;
}

.tile-link:hover{
  border-color: rgba(139,92,246,.6);
  box-shadow: 0 10px 30px rgba(0,0,0,.35);
  transform: translateY(-1px);
}

.compliance-box{ padding: 20px; }
</style>
</html>